<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:padding="32dp"
        android:textStyle="bold"
        android:background="@color/purple_500"
        android:text="@string/app_name"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:fontFamily="@font/comicbd"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="center_horizontal|bottom"
        >


        <Button
            android:id="@+id/btn_fundosolido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/teal_700"
            android:padding="14dp"
            android:textColor="@color/white"
            android:textSize="24sp"

            android:text="@string/btn_fundosolido"
            android:onClick="onFundoSolido"


             />
        <Button
            android:layout_margin="5dp"
            android:id="@+id/btn_imagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="14dp"
            android:textSize="24sp"
            android:text="@string/btn_imagemgaleria"
            android:backgroundTint="@color/teal_700"
            android:onClick="onImagem"
            />
        <Button
            android:layout_margin="5dp"
            android:id="@+id/btn_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:textSize="24sp"
            android:text="@string/btn_camera"
            android:backgroundTint="@color/teal_700"
            android:onClick="onCamera"/>
        <Button
            android:layout_margin="5dp"
            android:id="@+id/btn_historico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:textSize="24sp"
            android:text="@string/btn_historico"
            android:backgroundTint="@color/teal_700"
            android:onClick="onHistorico"/>
    </LinearLayout>

</FrameLayout>